{
  "name": "llamune",
  "version": "0.1.0",
  "description": "ローカルLLMを活用したコーディング支援プラットフォーム",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "llamune": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:cli": "tsx src/cli.ts",
    "start": "node dist/index.js",
    "cli": "node dist/cli.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "llm",
    "ollama",
    "coding-assistant",
    "local-ai"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "express": "^4.21.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "argon2": "^0.41.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3",
    "tsx": "^4.19.1",
    "vitest": "^2.1.4",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3"
  }
}
